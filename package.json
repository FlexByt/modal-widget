{
  "name": "svelte-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build:wix": "rollup -c -i src/entries/wix/index.ts -o public/build/wix/bundle.js",
    "build:shopify": "rollup -c -i src/entries/shopify/index.ts -o public/build/shopify/bundle.shopify.js",
    "build": "npm-run-all --parallel build:wix build:shopify",
    "dev": "rollup -c -w -i src/entries/wix/index.ts -o public/build/wix/bundle.js",
    "start": "sirv public --port 8001",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "manual-build": "yarn build && open public/build",
    "format": "prettier --write .",
    "postbuild": "yarn copy-css && yarn copy-js",
    "copy-css": "cp -rfv public/build/shopify/bundle.css ../reviews-jet-shopifiy/extensions/reviewsjet-extensions/assets/modal-widget.css",
    "copy-js": "cp -rfv public/build/shopify/bundle.shopify.js ../reviews-jet-shopifiy/extensions/reviewsjet-extensions/assets/modal-widget.js"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-multi-entry": "^6.0.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "@rollup/plugin-replace": "^5.0.1",
    "@rollup/plugin-typescript": "^8.0.0",
    "@tsconfig/svelte": "^2.0.0",
    "@types/node-sass": "^4.11.3",
    "@types/react": "^18.3.3",
    "@types/smooth-scrollbar": "^8.2.5",
    "dotenv": "^16.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.7",
    "prettier-plugin-svelte": "^2.10.0",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "sass": "^1.80.4",
    "svelte": "^3.0.0",
    "svelte-check": "^2.0.0",
    "svelte-preprocess": "^4.10.7",
    "tslib": "^2.0.0",
    "typescript": "^4.0.0"
  },
  "dependencies": {
    "dayjs": "^1.11.6",
    "hybrids": "^8.2.0",
    "initials": "^3.1.2",
    "millify": "^6.1.0",
    "react": "^18.3.1",
    "sirv-cli": "^2.0.0",
    "smooth-scrollbar": "^8.8.1",
    "svelte-carousel": "^1.0.21",
    "svelte-preprocess-react": "^0.17.1"
  }
}
